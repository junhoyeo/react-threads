{
  "name": "react-threads",
  "version": "1.0.0",
  "repository": "https://github.com/junhoyeo/react-threads",
  "author": "Junho Yeo <i@junho.io>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn swc && tsc",
    "swc": "rm -rf dist && yarn swc:cjs && yarn swc:esm",
    "swc:cjs": "swc src -d dist/cjs -C module.type=commonjs",
    "swc:esm": "swc src -d dist/esm -C module.type=es6"
  },
  "dependencies": {
    "react-linkify": "^1.0.0-alpha"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.68",
    "@types/node": "20.4.0",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@types/react-linkify": "^1.0.1",
    "autoprefixer": "10.4.14",
    "postcss": "8.4.25",
    "tailwindcss": "3.3.2",
    "threads-api": "^1.0.11",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "next": "13.4.9",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
